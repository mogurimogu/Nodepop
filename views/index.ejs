<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  üåç <a href="/change-locale/es">es</a> /
  <a href="/change-locale/en">en</a>
  <nav>
    <a href="/" class="logo">Nodepop</a>
    <form action="/" method="GET">
      <input type="text" name="nombre" class="search-bar">
      <select name="venta">
        <option value=""><%= __('buy/sell') %></option>
        <option value="true"><%= __('buy') %></option>
        <option value="false"><%= __('sell') %></option>
      </select>
      <select name="precio">
        <option value="0-50">0 - 50‚Ç¨ </option>
        <option value="51-1000000000000000000000">51 - 1000000000000000000000‚Ç¨ </option>
      </select>
      <input type="submit" value="<%= __('search') %>">
    </form>
  </nav>

  <div id="nodepop">
    <div class="listado">
      <% if (Object.keys(productos).length === 0) { %>
      <h1>No se encontraron productos con esos criterios</h1>
      <a href="./">Volver a todos los productos</a>
      <% } %>

      <%productos.forEach(producto => { %>
      <article class="product">
        <div class="product-card">
          <h1 class="product-title"><%= producto.nombre %></h1>
          <img src="<%= producto.foto %>" alt="" style="max-width: 300px; max-height: 300px;">
          <div class="product-status">
            <span class="status">
              <% if (producto.venta === true) { %>
              ü™ô Compra
              <% } else { %>
              ü§ë vende
              <% } %>
            </span>
            <span><%= producto.precio %>‚Ç¨</span>
          </div>
        </div>
        <div class="product-tags">
          <% producto.tags.forEach(tag => {  %>
          <a href="./?tags=<%= tag %>&nombre=<%= paginacion.nombre %>&precio=<%= paginacion.precio %>&venta=<%= paginacion.venta %>"><%= tag %></a>
          <% }); %>
        </div>

      </article>

      <% }); %>

      <div class="paginacion">
        <% if (paginacion.skip >= 1) { %>
        <a href="./?skip=<%= anterior = paginacion.skip - 10 %>&nombre=<%= paginacion.nombre %>&precio=<%= paginacion.precio %>&venta=<%= paginacion.venta %>&tags=<%= paginacion.tags %>">‚¨ÖÔ∏è anterior</a>
        <a href="./?skip=<%= siguiente = paginacion.skip + 10 %>&nombre=<%= paginacion.nombre %>&precio=<%= paginacion.precio %>&venta=<%= paginacion.venta %>&tags=<%= paginacion.tags %>">siguiente ‚û°Ô∏è</a>
        <% } else { %>
        <a href="./?skip=<%= paginacion.skip = 10 %>&nombre=<%= paginacion.nombre %>&precio=<%= paginacion.precio %>&venta=<%= paginacion.venta %>&tags=<%= paginacion.tags %>">siguiente ‚û°Ô∏è</a>
        <% } %>
      </div>

    </div>
    <div class="lateral">
      <h2><%= __('Cloud tags') %></h2>
      <div class="tag-cloud">
        <% for (const tag of tagList) { %> 
          <a href="./?tags=<%= tag %>&nombre=<%= paginacion.nombre %>&precio=<%= paginacion.precio %>&venta=<%= paginacion.venta %>"> <%= tag %>  </a>
        <% } %>       
      </div>
      <h2><%= __('Create product') %></h2>
      <form action="/api/productos" method="POST" id="form-add">
        <select name="venta">
          <option value="true">venta</option>
          <option value="false">compra</option>
        </select>
        <input type="text" name="nombre" placeholder="nombre" required>
        <input type="number" name="precio" placeholder="precio" required>
        <input type="text" name="foto" placeholder="ruta de la im√°gen" required>
        <ul id="tags">
          <li><input type="text" name="tags" placeholder="etiqueta" required></li>
        </ul>
        <input type="button" onclick="addTag()" value="‚ûï a√±adir etiqueta">

        <input type="submit" value="a√±adir">
      </form>
    </div>
  </div>




  <script>
    let tagIndex = 0
    let currentTag = undefined

    function addTag() {
      tagIndex += 1
      currentTag = 'tag' + tagIndex
      let inputTag = `<li id="${currentTag}"><input type="text" name="tags" placeholder="etiqueta" required><input type="button" onclick="removeTag('${currentTag}')" value="‚ùå"></li>`;
      document.getElementById('tags').innerHTML += inputTag

    }

    function removeTag(id) {
      document.getElementById(id).remove()
    }
  </script>


</body>

</html>